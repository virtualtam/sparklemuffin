{{define "content"}}
<h2>Account: {{.Content.Email}}</h2>

<div class="tools">
  <div>
    <h3>Information</h3>
    <ul>
      <li><a href="/account/info">Update information</a></li>
      <li><a href="/account/password">Update password</a></li>
    </ul>
  </div>
  <div>
    <h3>Session</h3>
    <ul>
      <li>
        <form action="/logout" method="POST">
          <button type=submit>Log out</button>
        </form>
      </li>
    </ul>
  </div>
</div>
{{- end}}
